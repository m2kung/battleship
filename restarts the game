def clear_and_redraw_grid():
    t.clear()
    grid()
    
def play_game():
    while True:
        clear_and_redraw_grid()
        player_turn()

        play_again = input("Do you want to play again? (yes/no): ").lower()
        if play_again != 'yes':
            t.bye()
            break


def main():
    play_game()

if __name__ == "__main__":
    main()
    
